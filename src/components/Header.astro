---
import { models } from '@/utils/openAI';
import Logo from './Logo.astro'
import Themetoggle from './Themetoggle.astro'
---

<header>
  <div class="fb items-center">
    <Logo />
    <Themetoggle />
  </div>
  <div class="fi mt-2">
    <span class="gpt-title">ChatGPT</span>
    <span class="gpt-subtitle">Demo</span>
  </div>
  <p mt-1 op-60>
    <label for="model-selector">选择模型：</label>
    <select id="model-selector" class="font-bold">
      {
        Object.entries(models).map(([name, _]) => {
          return <option value={name}>{name}</option>
        })
      }
    </select>
  </p>
</header>
